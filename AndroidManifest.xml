<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.superawesome.scorecard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="biz.superawesome.scorecard.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="biz.superawesome.scorecard.PlayerActivity"
            android:label="@string/title_activity_player" >
        </activity>
        <activity
            android:name="biz.superawesome.scorecard.ViewRoundsActivity"
            android:label="@string/title_activity_view_rounds" >
        </activity>
        <activity
            android:name="biz.superawesome.scorecard.RoundActivity"
            android:label="@string/title_activity_round" >
        </activity>
        <activity
            android:name="biz.superawesome.scorecard.NewRoundActivity"
            android:label="@string/title_activity_new_round" >
        </activity>
        <activity
            android:name="biz.superawesome.scorecard.HoleActivity"
            android:label="@string/title_activity_hole" >
        </activity>
        <activity
            android:name="biz.superawesome.scorecard.RoundPlayersActivity"
            android:label="@string/title_activity_round_players" >
        </activity>
    </application>

</manifest>
